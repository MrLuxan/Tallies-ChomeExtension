{
  "name": "Tallies",
  "description": "Keep Tallies",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": { 
    "16": "images/Icon16.png",
    "48": "images/Icon48.png",
    "128":"images/Icon128.png"
  },
  "browser_action": {
    "default_title": "Tallies",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2
}
